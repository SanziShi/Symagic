<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


<bean class="com.octo.captcha.service.image.DefaultManageableImageCaptchaService"
		id="imageCaptchaService" />

<bean id="JCaptcha" class="org.symagic.common.bean.captcha.JCaptcha">
<property name="jcaptchaImageServer" ref="imageCaptchaService"></property>
</bean>


<bean id="symagicCaptchaAction" class="org.symagic.security.action.CaptchaAction" >
<property name="symagicCaptche" ref="JCaptcha"></property>
</bean>

<bean id="LoginAction" class="org.symagic.common.action.LoginAction" />
<bean id="symagicSessionInfor" class="org.symagic.common.action.UserSessionInformation" />

</beans>