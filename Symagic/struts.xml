<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!-- 设置为开发模式输出DEBUG信息 -->
	<constant name="struts.devMode" value="true" />

	<package name="symagic-default" extends="json-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="log" method="Login" class="LoginAction">
			<result type="json">
				<param name="includeProperties">result</param>
			</result>
		</action>

		<action name="captcha_get_captcha" class="symagicCaptchaAction"
			method="execute">
			<result type="stream">
				<param name="contentType">${symagicCaptche.getCaptchaContentType}</param>
				<param name="inputName">imageInputStream</param>
			</result>
		</action>

		<action name="captcha_check_captcha" class="symagicCaptchaAction"
			method="checkCaptcha">
			<result type="json">
				<param name="root">captchaCheckResult</param>
			</result>
		</action>

		<action name="get_session_info" class="symagicSessionInfor">
			<result type="json">
				<param name="includeProperties">
					userName,
					nickName
				</param>
			</result>
		</action>


	</package>

</struts>    
