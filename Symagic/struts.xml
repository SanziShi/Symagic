<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<!-- 设置为开发模式输出DEBUG信息 -->
	<constant name="struts.devMode" value="true" />

	<!-- 配置拦截器 -->
	<package name="symagic-default" extends="json-default">
		<!-- 配置登陆用的拦截器 -->
		<interceptors>
			<interceptor name="loginInterceptor" class="LoginInterceptor"></interceptor>

			<interceptor-stack name="loginInterceptorStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="loginInterceptor"></interceptor-ref>
			</interceptor-stack>

		</interceptors>

		<!-- 用于错误处理的result -->
		<global-results>
			<result name="enforceLogin">/login.jsp</result>
		</global-results>
	</package>

	<package name="root-setting" extends="symagic-default">

		<action name="index">
			<result>/index.jsp</result>
		</action>

		<action name="captcha_get_captcha" class="checkCaptcha">
			<result type="stream">
				<param name="contentType">${symagicCaptcha.getCaptchaContentType}</param>
				<param name="inputName">imageInputStream</param>
			</result>
		</action>

		<action name="captcha_check_captcha" class="generateCaptcha">
			<result type="json">
				<param name="includeProperties">captchaCheckResult</param>
			</result>
		</action>

	</package>

</struts>    
